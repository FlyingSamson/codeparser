<?xml version="1.0"?>
<project name='ast' basedir='.'>

	<property name='component' value='ast' />

	<property environment='env' />
	<import file='${env.RE_ANTLIBRARY_HOME}/ant-lib.xml' />

	<!--
		Native libraries (platform-specific)
	-->

	<target name='NativeLibrary.ast.init.custom' extensionOf='NativeLibrary.init.custom'>

		<!-- - CMake generates makefiles here -->
		<property name='build.dir' value='${checkout_directory}${file.separator}${component}${file.separator}build' />

	</target>

	<target name='NativeLibrary.ast.prebuild' extensionOf='NativeLibrary.prebuild'>

		<delete dir='${build.dir}' />
        <mkdir dir='${build.dir}' />

	</target>

	<target name='NativeLibrary.ast.execute' extensionOf='NativeLibrary.execute'>

		<exec dir='${build.dir}' executable='${cmake.exe}' failonerror='true'>
			<arg line='-DWOLFRAMKERNEL=${mathExe} ..' />
        </exec>

		<exec dir='${build.dir}' executable='${cmake.exe}' failonerror='true'>
			<arg line='--build . --target paclet' />
        </exec>

	</target>

	<target name='NativeLibrary.ast.postbuild' extensionOf='NativeLibrary.postbuild'>

		<copy todir='${files_directory}'>
			<fileset dir='${build.dir}${file.separator}paclet${file.separator}AST' />
		</copy>
		
	</target>

	<!--
		Paclet (all platforms)
	-->

	<target name='Paclet.ast.init.custom' extensionOf='Paclet.init.custom'>

		<!--
			Prevent Paclet.clean from deleting files_directory,
			since CopyAndUnarchiveArtifact just put all the paclet
			files in there....
		-->

		<property name='keep.files_directory' value='true' />

	</target>

	<target name='Paclet.ast.prebuild' extensionOf='Paclet.prebuild' />

	<target name='Paclet.ast.execute' extensionOf='Paclet.execute'>

		<mathematica exe='${mathExe}' fresh='true' quit='true'><![CDATA[

			Print["$Version: ", $Version];
			Print["$InstallationDirectory: ", $InstallationDirectory];

			Unset[$MessagePrePrint];
			Needs["PacletManager`"];

			src = AntProperty["files_directory"];
			dest = FileNameJoin[AntProperty["output_directory"]];
			PackPaclet[src, dest];

			SetDirectory[dest]
			If [TrueQ[FileExistsQ[FileNames["ast*.paclet"][[1]]]],
				Print[FileNames["ast*.paclet"][[1]] " ... OK"],
				AntFail["Paclet not produced" ]];

		]]></mathematica>

	</target>

</project>
